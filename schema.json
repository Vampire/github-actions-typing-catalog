{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalItems": false,
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "inputs": {
      "type": "object",
      "additionalProperties": false,
      "additionalItems": false,
      "patternProperties": {
        "^.*$": {
          "type": "object",
          "additionalProperties": false,
          "additionalItems": false,
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "string",
                "integer",
                "boolean",
                "enum",
                "list"
              ]
            },
            "allowed-values": {
              "type": "array",
              "additionalProperties": false,
              "additionalItems": false,
              "items": {
                "type": "string"
              }
            }
          },
          "allOf": [
            {
              "if": {
                "properties": {
                  "type": {"const": "enum"}
                }
              },
              "then": {
                "required": ["allowed-values"]
              },
              "else": {
                "not":
                {
                  "required": ["allowed-values"]
                }
              }
            }
          ]
        }
      }
    },
    "outputs": {
      "type": "object",
      "additionalProperties": false,
      "additionalItems": false,
      "patternProperties": {
        "^.*$": {
          "type": "object",
          "additionalProperties": false,
          "additionalItems": false,
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "string",
                "integer",
                "boolean",
                "enum",
                "list"
              ]
            }
          }
        }
      }
    }
  }
}